<h1>Tiny's Tweets</h1>
  <ul>
    {{#each}}
    <li>{{#link-to 'tweet' this.id}}{{body}}{{/link-to}}</li>
    {{/each}}
  </ul>

  <p>
    <a href="#" {{action 'sortByDate'}}>Sort by date</a>
  </p>

  <form>
    <div class="form-group">
      <label for="body">Body</label>
      {{textarea id="body" class="form-control" rows="2" value=body}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input id="date" class="form-control" value=date}}
    </div>

    <button class="btn btn-primary" {{action 'newTweet'}}>New</button>

  </form>
